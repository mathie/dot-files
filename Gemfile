source 'https://rubygems.org/'

# tmux bits I live on
gem 'tmuxinator'

# Smart pull/rebase/merge
gem 'git-smart'

# Used by my vim configuration
gem 'CoffeeTags'

# Just a better irb
gem 'awesome_print'
gem 'pry'
gem 'pry-doc'

# Open up a gem in vim, for the days when I'm not in a bundler environment and
# can't rely on `bundle open` to do the same thing.
gem 'open_gem'

# Primarily for xmpfilter, which I'm promising myself I'll use now that it
# bugged me so much I went looking for it...
gem 'rcodetools'

# Spring for faster app launch time
gem 'spring'
