source 'https://rubygems.org/'

gem 'gem-ctags'

# Smart pull/rebase/merge
gem 'git-smart'

# Used by my vim configuration
gem 'CoffeeTags'

# Just a better irb
gem 'awesome_print'
gem 'pry'
gem 'pry-doc'
gem 'jist' # For gist support in pry.

# Open up a gem in vim, for the days when I'm not in a bundler environment and
# can't rely on `bundle open` to do the same thing.
gem 'gem-browse'

# Primarily for xmpfilter, which I'm promising myself I'll use now that it
# bugged me so much I went looking for it...
gem 'rcodetools'

# Rails development assistance (deployment, CI, etc).
gem 'foreman'
gem 'capistrano'
gem 'travis'

# Assistance for iOS development
gem 'cocoapods'
gem 'nomad-cli'
gem 'fastlane'

# Manage host aliases and unregistered hostnames.
gem 'ghost', '>= 1.0.0.pre2'

# Markdown previewer that looks identical to GitHub's output.
gem 'octodown'
