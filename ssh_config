# Host-specific rules
Host puppet.itison.com
  HostName 31.222.162.14

# General rules for particular domains
Host *.bidforwine.co.uk
  ForwardAgent yes
  Port 2201

Host *.local
  ForwardAgent yes

Host *.rubaidh.com
  ForwardAgent yes

Host *.rubaidh.net
  ForwardAgent yes

Host *.itison.com
  ForwardAgent yes
  Port 2712

# Global defaults
Host *
  # Multiplex several connections to the same host over the same channel.
  ControlMaster auto
  ControlPersist 600
  ControlPath ~/.ssh/control/%r@%h:%p.sock

  # Do protocol-level keepalives, in the hopes of foiling the Cisco ASA that
  # seems determined to time out my sessions. 5 second pings, 3 of 'em,
  # connections will time out 15 seconds after the remote host is unreachable.
  ServerAliveInterval 5
  ServerAliveCountMax 3
